= content_tag_for(:div, reply, class: 'row') do
  .large-1.columns.small-3
    = link_to (image_tag reply.user.image.reply_size), reply.user
    - if @current_user && ((@current_user == reply.user) || (@current_user.is_admin?))
      .reply-controls{style: 'position: absolute; right: -0.2em; top: 0; height: 100%; width: 1em;'}
        %a
          %i.fi-pencil
        = link_to reply, method: :delete, remote: true, confirm: 'Are you SURE you want to delete this reply?', style: 'position: absolute; bottom: 0;' do
          %i.fi-trash
  .large-11.columns
    %p= reply.content