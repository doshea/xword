= content_tag_for(:div, reply, class: 'row') do
  .large-1.columns.small-3
    = link_to (image_tag reply.user.image.reply_size), reply.user
    - if @current_user && ((@current_user == reply.user) || (@current_user.is_admin?))
      .reply-controls{style: 'position: absolute; right: 0; top: 0;'}
        = link_to reply, method: :delete, remote: true, confirm: 'Are you SURE you want to delete this reply?' do
          %i.fi-trash
  .large-11.columns
    %p= reply.content