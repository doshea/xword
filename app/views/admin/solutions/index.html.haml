- title 'Admin | Solutions', true
= content_for :head do
  = stylesheet_link_tag :pagination
= render layout: 'layouts/partials/topper_stopper', locals: {row_top_title: 'Solutions'} do
  = will_paginate @solutions, class: 'smaller pagination'
  %table
    %thead
      %tr
        %th ID
        %th Crossword
        %th Creator
        %th Letters
        %th Complete?
        %th Team Solution?
        %th Key

        %th
        %th
    %tbody
      - @solutions.each do |solution|
        = content_tag(:tr, id: dom_id(solution)) do
          %td= solution.id
          %td= link_to solution.crossword.try(:title) || 'NONE', solution.crossword
          %td= link_to solution.user.username, solution.user
          %td{style: 'font-size: 6px; max-width: 250px; overflow-wrap: break-word;'}= solution.letters
          %td
            - if solution.is_complete
              = icon('check')
          %td
            - if solution.team
              = icon('check')
          %td
            - if solution.key
              = link_to solution.key, team_crossword_path(solution.crossword, solution.key)
          %td
            = link_to edit_admin_solution_path(solution) do
              = icon('pencil')
          %td
            / Replaced: link_to with method: :delete, remote: true â†’ turbo_method: :delete (redirect after destroy)
            = link_to admin_solution_path(solution), data: { turbo_method: :delete, turbo_confirm: "Are you SURE you want to delete this solution by #{solution.user.username}?" } do
              = icon('trash-2')
