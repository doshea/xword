= render layout: 'layouts/partials/topper_stopper', locals: {row_top_title: "Edit <i>#{@crossword.title}</i>".html_safe, custom_columns: true} do
  %br
  / Replaced: form_for with remote: true → form_with (Turbo handles AJAX; controller now redirects after update)
  = form_with model: @crossword, url: url_for(controller: 'admin/crosswords', action: :update, id: @crossword.id) do |f|
    .large-5.columns
      = f.label :title
      = f.text_field :title
    .large-1.columns
      = f.label :rows
      = f.number_field :rows
    .large-1.columns
      = f.label :cols, 'Columns'
      = f.number_field :cols
    .large-2.columns
      = f.label :circled, 'Contains Circles'
      = f.check_box :circled
    .large-3.columns
      = f.label :created_at
      = date_field :crossword, :created_at
    .large-12.columns
      = f.label :description
      = f.text_area :description
    .large-12.columns
      = f.label :letters
      = f.text_area :letters, maxlength: @crossword.rows * @crossword.cols, style: 'text-transform: uppercase;'
    .large-12.columns
      = f.button class: 'button', data: {disable_with: 'Updating...'}
  .large-12.columns
    / Replaced: button_to with remote: true → button_to without (Turbo intercepts form; controller redirects)
    = button_to 'Generate Preview', generate_preview_admin_crossword_path, method: :patch