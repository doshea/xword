= render layout: 'layouts/partials/topper_stopper', locals: {row_top_title: "Edit Word", custom_columns: true} do
  %br
  = form_for @word, url: url_for(controller: 'admin/words', method: :update), remote: true do |f|
    .large-12.columns
      = f.label :content
      = f.text_field :content
    .large-12.columns
      = f.submit class: 'button', data: {disable_with: 'Updating...'}