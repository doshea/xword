var new_errors = '<%=j render partial: 'users/partials/errors' %>';
if($('#password-errors p').html() == new_errors){
  $('#password-errors').fadeOut('fast').fadeIn('fast');
} else {
  $('#password-errors p').text('').html('<%=j render partial: 'users/partials/errors' %>');
  $('#password-errors').slideDown();
}