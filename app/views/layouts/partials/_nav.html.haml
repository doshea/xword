-# NOTE: Floating this topbar was considered but did not add utility and caused some annoying graphical effects
%nav.top-bar.no-select{data: {topbar: true, options: 'is_hover: false'}}
  %ul.title-area
    -# Title Area
    %li.name
      %h1
        = link_to image_tag('header_icon.png', height: "35%", alt: "Crossword Caf√© | Home", id: 'header_icon'), root_url
    -# Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      = link_to '#' do
        %span Menu
  %section.top-bar-section
    -# Left Nav Section
    %ul.left
      - if is_admin?
        =render partial: 'layouts/partials/admin'
      %li.divider
    -# Right Nav Section
    %ul.right
      %li.has-form
        = form_tag search_path, method: 'get', id: 'top-search', class: 'relative' do
          .row.collapse
            .small-12.columns
              = search_field_tag 'query', nil, class: 'round', autocomplete: 'off'
              %i.fi-magnifying-glass
          %ul#live-results
      %li.divider
      %li.has-dropdown
        = link_to '#' do
          Solve
        %ul.dropdown
          %li.divider
          %li
            = link_to '#' do #TODO
              = image_tag 'nyt_white.png', style: 'max-width: 18px; max-height: 18px;'
              NY Times
          %li.divider
          %li
            = link_to '#' do #TODO
              %i.fi-torso.larger
              User-Made
          %li.divider
          %li
            = link_to User.rand_unowned_puzzle do
              %i.fi-shuffle.larger
              Random
      %li.divider
      %li.has-dropdown
        = link_to '#' do
          Create
        %ul.dropdown
          %li.divider
          %li
            = link_to new_crossword_path do
              %i.fi-pencil.larger
              New
          %li
            = link_to create_dashboard_path do
              %i.fi-results.larger
              Dashboard
      %li.divider
      - if is_logged_in?
        = render partial: 'layouts/partials/user_dropdown'
      -else
        = render partial: 'layouts/partials/anonymous'
      %li.divider
