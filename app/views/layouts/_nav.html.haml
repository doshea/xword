%nav.top-bar.dark-shadow
  .row
    %ul.title-area
      / Title Area
      %li.name
        %h1
          = link_to image_tag("header_icon.png", :height => "35%", :alt => "Crossword CafÃ© | Home", :id => 'header_icon'), root_url
      / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
      %li.toggle-topbar.menu-icon
        %a{:href => "#"}
          %span Menu
    %section.top-bar-section
      / Left Nav Section
      %ul.left
        - if is_admin?
          =render :partial => 'layouts/admin'
        %li.divider
      / Right Nav Section
      %ul.right
        %li.has-form
          %form#top_search
            .row.collapse
              .small-12.columns
                %input{:type => "text", :class => 'round'}
                %i.general.foundicon-search
        %li.divider
        - if is_logged_in?
          = render :partial => 'layouts/user_dropdown'
        -else
          = render :partial => 'layouts/anonymous'
        %li.divider
