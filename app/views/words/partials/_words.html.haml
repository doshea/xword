%table
  %thead
    %tr
      %th ID
      %th Content
      %th Example clue
      %th
      %th
  %tbody
    - @words.each do |word|
      = content_tag(:tr, id: dom_id(word)) do
        %td= link_to word.id, word
        %td= link_to word.content, word
        %td= word.clues.first.try(:content)
        %td
          = link_to edit_admin_word_path(word) do
            = icon('pencil')
        %td
          / Replaced: link_to with method: :delete, remote: true â†’ turbo_method: :delete (redirect after destroy)
          = link_to admin_word_path(word), data: { turbo_method: :delete, turbo_confirm: "Are you SURE you want to delete #{word.content}?" } do
            = icon('trash-2')
