if($('.content.active ul').length == 1){
  var old_button = $('.content.active form');
} else {
  var old_button = $('.content.active input[disabled]').parent();
}
var tab_list_target = old_button.closest('.row').prev('ul');

<% @crosswords.each do |crossword| %>
  tab_list_target.append("<%=j render partial: 'crosswords/partials/crossword_tab', locals: {crossword: crossword} %>");
<% end %>
<% if @crosswords_remaining && @crosswords_remaining.any? %>
  old_button.after("<%=j render partial: 'pages/home/load_next_button', locals: {remaining: @crosswords_remaining} %>").remove();
<% else %>
  old_button.remove();
<% end %>
