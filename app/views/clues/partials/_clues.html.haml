%table
  %thead
    %tr
      %th ID
      %th Content
      %th Word
      %th Difficulty
      -# %th Creator
      %th
      %th
  %tbody
    - @clues.each do |clue|
      = content_tag_for(:tr, clue) do
        %td= link_to clue.id, clue
        %td= link_to clue.content.html_safe, clue
        %td= clue.word.content if clue.word
        %td= clue.difficulty
        -# # %td= link_to clue.user.username, clue.user
        %td
          = link_to edit_admin_clue_path(clue) do
            %i.fi-pencil
        %td
          = link_to admin_clue_path(clue), method: :delete, remote: true, data: {confirm: "Are you SURE you want to delete this clue?"} do
            %i.fi-trash