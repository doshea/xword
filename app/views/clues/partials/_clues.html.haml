%table
  %thead
    %tr
      %th ID
      %th Content
      %th Word
      %th Difficulty
      -# %th Creator
      %th
      %th
  %tbody
    - @clues.each do |clue|
      = content_tag_for(:tr, clue) do
        %td= link_to clue.id, clue
        %td= link_to clue.content, clue
        %td= clue.word.content if clue.word
        %td= clue.difficulty
        -# # %td= link_to clue.user.username, clue.user
        %td Edit
        %td Delete