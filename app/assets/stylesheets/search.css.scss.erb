#search-results {
  padding: 1em;

  a {
    color: inherit;
  }
  p {
    margin: 0;
  }

  .result-crossword {
  -webkit-border-radius: 1em;
  -moz-border-radius: 1em;
  border-radius: 1em;
  -webkit-transition: background 0.4s;
  -moz-transition: background 0.4s;
  -o-transition: background 0.4s;
  transition: background 0.4s;

    &:hover{
      background: lightgrey;
    }
    .row {
      padding: 0.5em 0;
      .minipic{

      }
      .metadata {
        padding-left: 1.2em;
        p {
          margin: 0;
          &.title {
            font-weight: bold;
            margin-top: -0.5em;
          }
          &.byline {
            font-style: italic;
            font-size: smaller;
          }
          &.dimensions {
            font-size: smaller;
          }
        }
      }
    }
  }

  .result-user {
    text-align: center;
    -webkit-border-radius: 1em;
    -moz-border-radius: 1em;
    border-radius: 1em;
    -webkit-filter: grayscale(80%);
    -webkit-transition: all 0.6s;
    -moz-transition: all 0.6s;
    -o-transition: all 0.6s;
    transition: all 0.6s;
    &:hover {
      -webkit-filter: grayscale(0%);
      background: lightgrey;
    }
    img {

    }
    p.name {
      text-align: center;
    }
  }
}