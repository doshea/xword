.row.puzzle-tabs {
  padding: 1em;

  .result-user {
    text-align: center;
    -webkit-border-radius: 1em;
    -moz-border-radius: 1em;
    border-radius: 1em;
    -webkit-filter: grayscale(80%);
    -webkit-transition: all 0.6s;
    -moz-transition: all 0.6s;
    -o-transition: all 0.6s;
    transition: all 0.6s;
    &:hover {
      -webkit-filter: grayscale(0%);
      background: lightgrey;
    }
    img {
      margin-top: 0.5em;
    }
    p.name {
      text-align: center;
    }
  }
}

.result-crossword {
  -webkit-border-radius: 1em;
  -moz-border-radius: 1em;
  border-radius: 1em;
  -webkit-transition: background 0.4s;
  -moz-transition: background 0.4s;
  -o-transition: background 0.4s;
  transition: background 0.4s;

  &:hover{
    background: lightgrey;
  }
  .row {
    padding: 0.5em 0;
    .metadata {
      padding-left: 1.2em;
      p {
        margin: 0;
        &.title {
          font-weight: bold;
          margin-top: -0.5em;
        }
        &.byline {
          font-style: italic;
          font-size: smaller;
        }
        &.dimensions {
          font-size: smaller;
        }
      }
    }
  }
}

.puzzle-tabs {
  a:not(.foundation) {
    color: inherit;
  }
  p {
    margin: 0;
  }
}

.result-crossword {
  .fi-refresh {
    position: absolute;
    bottom: 0.5em;
    right: 1em;
    opacity: 0;
    transition: opacity 0.4s;
    font-size: larger;
  }
  &:hover .fi-refresh {
    opacity: 1;
    &:hover {
      color: #2ba6cb;
      transition: color 0.3s;
    }
  }
}