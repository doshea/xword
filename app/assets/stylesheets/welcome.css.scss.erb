$input-include-glowing-effect: false;

html {
  background-color: gray;
  background: url("<%= asset_path 'welcome/couchCafe.jpg' %>") no-repeat center center gray;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 100%;
}
body {
  height: 100%;
}

#body {
  margin: 0;
  padding: 0;
  height: 100%;
}
footer#footer {
  margin: 0;
}
#chalkboard {
  background: url("<%= asset_path 'welcome/chalkboardBlack.png' %>") no-repeat;
  margin: 5em auto;
  width: 23.3em;
  height: 29.5em;
  -webkit-box-shadow: 0.5em 0.625em 1.8em #000;
  -moz-box-shadow: 0.5em 0.625em 1.8em #000;
  box-shadow: 0.5em 0.625em 1.8em #000;
  color: lightgrey;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.slider {
  position: relative;
  height: 100%;
}
#logged-out-signin-container {
  width: 23.3em;
  height: inherit;
  position: relative;
  top: -29.3em;
  left: 23.3em;
  padding-top: 3em;
  form {
    #remember_box {
      margin: 0.5em 0 1em;
      label {
        cursor: default;
        display: inline-block;
        color: #ADB1B1;
        font-size: inherit;
        font-family: inherit;
        vertical-align: middle;
      }
      #remember_me {
        font-size: 16px;
        cursor: pointer;
      }
    }
  }
}
#logged-out-welcome-container {
  width: 23.3em;
  height: inherit;
  padding-top: 3em;

  #welcomeBoard {
    margin: 0em auto 1em auto;
    display: block;
    background: url("<%= asset_path 'welcome/welcomeBoard.png' %>") no-repeat;
    height: 4em;
    width: 11.6em;
  }
}
input.chalkboardInput {
  border: none;
  border-bottom: 1px #a5a5a5 dotted;
  color: white;
  width: 65%;
  margin: 0;
  -webkit-box-shadow: none;
  box-shadow: none;
  display: inline-block;
  &:focus {
    color: inherit;
    background-color: inherit;
    border-bottom: 1px #f5f5f5 dotted;
  }
}
input.subtle-input {
  background: none;
  text-align: center;
  font-size: inherit;
}
.chalkboardButton {
  margin: 1em auto 0em;
  padding: 0.6em 0;
  color: #f5f5f5 !important;
  border: 1px outset;
  display: block;
  text-align: center;
  width: 10em;
  background: rgba(255,255,255,0.2);
  font-size: inherit;
  width: 10em;
  cursor: pointer;
  position: relative;

  &:hover {
    background: #4f4f4f;
  }

  i {
    vertical-align: middle;
    position: absolute;
    &.fi-arrow-left {
      left: 1em;
    }
    &.fi-arrow-right {
      right: 1em;
    }
  }
}