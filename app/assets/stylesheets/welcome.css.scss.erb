html {
  background: url("<%= asset_path 'welcome/couchCafe.jpg' %>") no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 100%;
}
body {
  height: 100%;
}
#nav {
  position: fixed;
  display: none;
}
#body {
  margin: 0;
  padding: 0;
  height: 100%;
}
footer#footer {
  margin: 0;
}
#logged-out-welcome-container {
  width: 23.3em;
  height: 29.5em;
  margin: 5em auto;
  background: url("<%= asset_path 'welcome/chalkboardBlack.png' %>") no-repeat;
  -webkit-box-shadow: 0.5em 0.625em 1.8em #000;
  -moz-box-shadow: 0.5em 0.625em 1.8em #000;
  box-shadow: 0.5em 0.625em 1.8em #000;
  padding-top: 3em;
  color: lightgrey;
  text-align: center;
}

#welcomeBoard {
  margin: 0em auto 2em auto;
  display: block;
  background: url("<%= asset_path 'welcome/welcomeBoard.png' %>") no-repeat;
  height: 4em;
  width: 11.6em;
}

input.chalkboardInput {
  border: none;
  border-bottom: 1px #f5f5f5 dotted !important;
  color: white;
  width: auto;
  margin: 0;
  -webkit-box-shadow: none;
  box-shadow: none;
  display: inline-block;
}

input.subtle-input {
  background: none;
  text-align: center;
  font-size: inherit;
}
.chalkboardButton {
  margin: 0em auto 2em auto;
  padding: 0.6em 0;
  color: #f5f5f5 !important;
  border: 1px outset;
  display: block;
  text-align: center;
  width: 10em;
  background: rgba(255,255,255,0.2);
  font-size: inherit;
  width: 10em;
  font-weight: bold;
  cursor: pointer;
}