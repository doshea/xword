@import 'global_mixins';
$bottomcolor: black;

.side-button {
  background: black;
  color: whitesmoke;
  font-size: 1.5em;

  #settings-button {
    position: fixed;
    right: 0;
    top: 40%;
    -webkit-border-top-left-radius: 0.4em;
    -webkit-border-bottom-left-radius: 0.4em;
    -moz-border-radius-topleft: 0.4em;
    -moz-border-radius-bottomleft: 0.4em;
    border-top-left-radius: 0.4em;
    border-bottom-left-radius: 0.4em;
    padding: 0.3em 0.3em 0.2em 0.4em;
  }
}

.bottom-button {
  background: black;
  color: whitesmoke;
  font-size: 1.25em;
  position: absolute;
  top: -1.5em;
  width: 6em;
  z-index: 1;
  border-top: 1px solid #444;
}
#ideas-button {
  -webkit-border-top-right-radius: 0.5em;
  -moz-border-radius-topright: 0.5em;
  border-top-right-radius: 0.5em;
  padding: 0.3em 0.4em 0.2em 0.3em;
  border-right: 1px solid #444;
}
#pattern-search-button {
  width: 9em;
  left: 5.8em;
  -webkit-border-top-left-radius: 0.5em;
  -moz-border-radius-topleft: 0.5em;
  border-top-left-radius: 0.5em;
  padding: 0.3em 0.3em 0.2em 0.4em;
  border-left: 1px solid #444;
}

.slide-up-container {
  z-index: 70001;
  position: fixed;
  -webkit-transition: top 0.4s;
  -moz-transition: top 0.4s;
  -o-transition: top 0.4s;
  transition: top 0.4s;
  top: 100%;
  bottom: 0;
  height: 90%;

  &#idea-container {
    left: 0;
  }

  &#pattern-container {
    right: 0;
    width: 18.5em;
  }
  &.open{
    top: 95px;
  }
}
#title {
  margin: 0;
}
#title-status {
  background-image: url("<%= asset_path 'spinner_small.gif' %>");
  position: absolute;
  top: 0;
  right: 1em;
  height: 100%;
  padding: 0 0.5em 0;
  color: black;
  opacity: 0;
  background-repeat: no-repeat;
  background-position: 50%;
  display: block;
  &.fi-x {
    color: red;
  }
  &.fi-x, &.fi-check {
    background-image: none;
    padding: 0 0.2em 0;
  }
}

#settings {
    color: whitesmoke;
    @include border-radius(1px);
    background: $bottomcolor;
  }

#pattern-search {
  position: absolute;
  background: $bottomcolor;
  max-height: 80%;
  min-height: 20em;
  width: 18.5em;
  padding: 1em;
  border-left: 1px solid #444;
  border-bottom: 1px solid #444;
  border-top: 1px solid #444;

}

#word-match-results {
  background: white;
  overflow-y: scroll;
  max-height: 25em;

  #match-header {
    text-align: center;
  }

  li {
    display: inline-block;
    font-size: small;

    &:hover {
      color: blue;
    }
  }
}

#pattern-search input, #ideas input {
  text-transform: uppercase;
  height: 2em;

  &::-webkit-input-placeholder {
    text-transform: none;
  }
  &:-moz-placeholder { /* Firefox 18- */
     text-transform: none;
  }
  &::-moz-placeholder {  /* Firefox 19+ */
     text-transform: none;
  }
  &:-ms-input-placeholder {  
     text-transform: none;
  }
}

#ideas {
  position: absolute;
  text-transform: uppercase;
  background: $bottomcolor;
  max-height: 80%;
  min-height: 20em;
  width: 18.5em;
  padding: 1em;
  border-right: 1px solid #444;
  border-bottom: 1px solid #444;
  border-top: 1px solid #444;

  ul {
    background: white;
    overflow-y: scroll;
    margin: 0;
    width: 16.5em;
    max-height: 25em;
    -webkit-transition: max-height 0.4s;
    -moz-transition: max-height 0.4s;
    -o-transition: max-height 0.4s;
    transition: max-height 0.4s;

    .columns {
      padding: 0;
    }

    li {
      font-size: smaller;
      width: 100%;
      -webkit-transition: background 0.4s;
      -moz-transition: background 0.4s;
      -o-transition: background 0.4s;
      transition: background 0.4s;

      &:nth-child(even) {
        background: #eee;
      }

      &.added-word {
        background: lightgreen;
        display: none;
      }

      .length {
        opacity: 0.5;
        font-size: smaller;
        text-align: center;
      }
    }
  }
}
$switch-height: 1.8em;
$switch-width: 4em;
$pip-diameter: $switch-width/3;
$switch-on-color: lighten(limegreen, 20%);
$switch-off-color: lighten(red, 20%);

.switch-form {
  display: inline-block;
  margin: 0;
  height: $switch-height;
  position: relative;
  .switch {
    position: relative;
    width: $switch-width;
    background: white;
    height: $switch-height;
    display: inline-block;
    border-width: 1px;
    border-style: solid;
    @include border-radius($pip-diameter);
    @include transition(all, 0.2s);
  }
  .pip {
    position: absolute;
    display: inline-block;
    height: $pip-diameter;
    width: $pip-diameter;
    margin-top: $switch-height/14;
    @include border-radius($pip-diameter/2);
    @include transition(all, 0.2s);
  }
  label {
    margin: 0;
    width: $switch-width*3;
    &.on {
      .switch {
        border-color: $switch-on-color;
      }
      .pip {
        left: $switch-width*3/5;
        background: $switch-on-color;
      }
    }
    &.off {
      .switch {
        border-color: $switch-off-color;
      }
      .pip {
        left: $switch-width/15;
        background: $switch-off-color;
      }  
    }
  }
  span {
    height: 1em;
    position: absolute;
    top: 0;
    left: $switch-width + 1em;
  }
  input[type=checkbox] {
    display: none;
  }
}

#tools {
  position: fixed;
  height: 300px;
  width: 96%;
  margin: 0 2%;
  bottom: 0;
  z-index: 10000;
  background: rgba(30,30,30, 0.3);
  -webkit-border-top-left-radius: 0.5em;
  -webkit-border-top-right-radius: 0.5em;
  -moz-border-radius-topleft: 0.5em;
  -moz-border-radius-topright: 0.5em;
  border-top-left-radius: 0.5em;
  border-top-right-radius: 0.5em;
  overflow: hidden;
  font-size: smaller;
}

.ui-draggable {
  cursor: -webkit-grab;
  &.ui-draggable-dragging {
    cursor: -webkit-grabbing;
  }
}

::-webkit-scrollbar {
    -webkit-appearance: none;
}

::-webkit-scrollbar-thumb {
    @include border-radius(8px);
    border: 2px solid white; /* should match background, can't be transparent */
    background-color: rgba(0, 0, 0, .5);
}

@media (max-height: 700px){
  #ideas ul, #word-match-results {
    max-height: 15em;
  }
}