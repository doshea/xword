// Phase 5: footer styles will be migrated to _components.scss / _footer.scss

@import 'global_mixins';

footer#footer {
  position: relative;
  background-color: gray;
  margin-top: 4em;
  padding-top: 0.75em;
  width: 100%;

  .row {
    a {
      color: #333;
      -webkit-transition: all 0.3s;
      -moz-transition: all 0.3s;
      -o-transition: all 0.3s;
      transition: all 0.3s;

      &:hover {
        color: #2795b6;
      }
    }

    .subheader {
      margin-bottom: 0;
      position: absolute;
      right: 1em;
      bottom: 0.2em;
    }

    #social-links {
      i {
        color: #333;
        font-size: 1.5em;
        -webkit-transition: all 0.3s;
        -moz-transition: all 0.3s;
        -o-transition: all 0.3s;
        transition: all 0.3s;
        &:hover {
          color: #2795b6;
        }
      }
    }
  }

  ul {
    @include no-bullets;
  }
}
