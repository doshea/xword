.small-shadow {
  -moz-box-shadow: 1px 1px 2px #000;
  -ms-box-shadow: 1px 1px 2px #000;
  -webkit-box-shadow: 1px 1px 2px #000;
  box-shadow: 1px 1px 2px #000;
}
.light-shadow {
  -moz-box-shadow: 3px 3px 3px grey;
  -ms-box-shadow: 3px 3px 3px grey;
  -webkit-box-shadow: 3px 3px 3px grey;
  box-shadow: 3px 3px 3px grey;
}
.shadow {
  -moz-box-shadow: 3px 3px 3px #222;
  -ms-box-shadow: 3px 3px 3px #222;
  -webkit-box-shadow: 3px 3px 3px #222;
  box-shadow: 3px 3px 3px #222;
}

.dark-shadow {
  -moz-box-shadow: 3px 3px 3px black;
  -ms-box-shadow: 3px 3px 3px black;
  -webkit-box-shadow: 3px 3px 3px black;
  box-shadow: 3px 3px 3px black;
}
.thin-border {
  border: 1px solid black;
}
.borderless {
  border: none !important;
}
.paper {
  background-image: url("<%= asset_path 'paper.jpeg' %>");
}
.relative {
  position: relative;
}
.hidden {
  display: none;
}
.ib {
  display: inline-block;
}
.no-margin {
  margin: 0;
}

html {
  background: url(<%= asset_path('wood_table.jpg') %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 100%;
}
body {
  background: none;
  min-height: 100%;
  height: 100%;
}
#body {
  margin-top: 1em;
  min-height: 92%;
  & > .row {
    background-color: white;
  }
  & > .row-bookend {
    min-height: 1.5em;
    background: black;
    text-align: center;
    p, h1, h2, h3, h4, h5, h6 {
      color: white;
    }
  }
  & > .row-topper {
    -webkit-border-radius: 1em 1em 0 0;
    -moz-border-radius: 1em 1em 0 0;
    border-radius: 1em 1em 0 0;
    margin-top: 2em;
  }
  & > .row-stopper {
    -webkit-border-radius: 0 0 1em 1em;
    -moz-border-radius: 0 0 1em 1em;
    border-radius: 0 0 1em 1em;
  }
}

.no-select {
  &::selection {
    background-color: transparent;
  }
  &::moz-selection {
    background-color: transparent;
  }
  &::webkit-selection {
    background-color: transparent;
  }
  ::selection {
    background-color: transparent;
  }
  ::moz-selection {
    background-color: transparent;
  }
  ::webkit-selection {
    background-color: transparent;
  }
}

.smaller {
  font-size: smaller;
}
.larger {
  font-size: larger;
}
.center {
  text-align: center;
}
.text-right {
  text-align: right;
}
input:focus::-webkit-input-placeholder
{
    color: transparent;
}


.no-list-style {
  list-style-type: none;
}
