@import 'dimensions';

#body > .row {
  padding: 0.5em 1em;
  max-width: $row-width+2em;
}

#credit_area, #solve_area, #meta_area {
  background-image: url("<%= asset_path 'paper.jpeg' %>");
}

#credit_area {
  margin-top: 2.5em;
  -webkit-border-top-left-radius: 0.3em;
  -webkit-border-top-right-radius: 0.3em;
  -moz-border-radius-topleft: 0.3em;
  -moz-border-radius-topright: 0.3em;
  border-top-left-radius: 0.3em;
  border-top-right-radius: 0.3em;
  #creator_credit {
    font-size: large;
    font-weight: normal;
  }
  #puzzle_controls {
    position: absolute;
    right: 0.5em;
    top: 0.5em;
  }
}
#meta_area {
  -webkit-border-bottom-left-radius: 0.3em;
  -webkit-border-bottom-right-radius: 0.3em;
  -moz-border-radius-bottomleft: 0.3em;
  -moz-border-radius-bottomright: 0.3em;
  border-bottom-left-radius: 0.3em;
  border-bottom-right-radius: 0.3em;
}

table#crossword {
  border-spacing: 0;
  float: left;
  tr {

    td.cell {
      padding: 0;
      margin: 0;
      border: solid 0.0625em black;
      font-size: 1.25em;
      text-align: center;
      text-transform: uppercase;
      width: 1.5em;
      height: 1.5em;
      position: relative;

      &.void {
        background-color: black;
      }
      &:not(.void){
        cursor: text;
      }
      &.selected {
        background-color: rgba(255,220,110,0.7);
      }
      &.selected_word:not(.selected) {
        background-color: rgba(255,255,170,0.7);
      }
      .letter {
        line-height: 140%;
      }
      .cell_num {
        position: absolute;
        top: 0;
        left: 1px;
        font-size: 0.4em;
        line-height: 1em;
      }
    }
  }
}

.clue_column {
  float: left;
  background: lightgrey;
  border: 1px solid lightgrey;
  h6 {
    text-align: center;
  }
  .clues {
    list-style-type: none;
    max-height: 450px;
    overflow: scroll;
    width: 250px;
    overflow-x: hidden;
    background: white;
    font-size: smaller;

    .clue {
      border: 1px solid rgba(255,255,255,0);

      &.selected_clue {
        background-color: rgba(255, 255, 170, 1);
        border: 1px solid #999;
      }
    }
  }
}

#preview {
  text-align: center;
  canvas {
    display: inline-block;
  }
}