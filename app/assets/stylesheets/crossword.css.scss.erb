@import 'dimensions';

table#crossword {
  border-spacing: 0;
  background-image: url("<%= asset_path 'paper.jpeg' %>");
  float: left;
  tr {

    td.cell {
      padding: 0;
      margin: 0;
      border: solid 0.0625em black;
      font-size: 1.25em;
      text-align: center;
      text-transform: uppercase;
      width: 1.5em;
      height: 1.5em;
      position: relative;

      &.void {
        background-color: black;
      }
      &:not(.void){
        cursor: text;
      }
      &.selected {
        background-color: rgba(255,220,110,0.7);
      }
      &.selected_word:not(.selected) {
        background-color: rgba(255,255,170,0.7);
      }

      .cell_num {
        position: absolute;
        top: 0;
        left: 1px;
        font-size: 0.4em;
      }
    }
  }
}
.clue_column {
  float: left;
  .clues {
    list-style-type: none;
    max-height: 450px;
    overflow: scroll;
    width: 250px;

    .clue {
      border: 1px solid rgba(255,255,255,0);

      &.selected_clue {
        background-color: rgba(255, 255, 170, 1);
        border: 1px solid #999;
      }
    }
  }
}