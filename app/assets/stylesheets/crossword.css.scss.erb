@import 'dimensions';
@import 'buttons';


#body > .row {
  padding: 0.5em 1em 0 1em;
  max-width: $row-width+2em;
}

#credit-area, #solve-area, #meta-area {
  background-image: url("<%= asset_path 'paper.jpeg' %>");
}

#credit-area {
  margin-top: 2.5em;
  margin-bottom: 0;
  -webkit-border-top-left-radius: 0.3em;
  -webkit-border-top-right-radius: 0.3em;
  -moz-border-radius-topleft: 0.3em;
  -moz-border-radius-topright: 0.3em;
  border-top-left-radius: 0.3em;
  border-top-right-radius: 0.3em;
  h3 {
    margin-bottom: 0.2em;
    #creator-credit {
      font-size: large;
      font-weight: normal;
    }
    i {
      position: absolute;
      top: 0;
      right: 1em;
      padding: 0.3em 0.5em 0.3em 0;
      color: white;
      &.fi-x {
        color: red;
      }
    }
  }
  #puzzle-controls {
    position: absolute;
    right: 0.5em;
    top: 0.5em;
  }
}
#meta-area {
  -webkit-border-bottom-left-radius: 0.3em;
  -webkit-border-bottom-right-radius: 0.3em;
  -moz-border-radius-bottomleft: 0.3em;
  -moz-border-radius-bottomright: 0.3em;
  border-bottom-left-radius: 0.3em;
  border-bottom-right-radius: 0.3em;
}

table#crossword {
  border-spacing: 0;
  float: left;

  tr {

    &:nth-of-type(even) {
      background: inherit;
    }

    td.cell {
      padding: 0;
      margin: 0;
      border: solid 0.0625em black;
      font-size: 1.25em;
      text-align: center;
      text-transform: uppercase;
      width: 1.5em;
      height: 1.5em;
      position: relative;

      &.void {
        background-color: black !important;
      }
      &:not(.void){
        cursor: text;
      }
      &.selected {
        background-color: rgba(255,220,110,0.7);
      }
      &.selected-word:not(.selected) {
        background-color: rgba(255,255,170,0.7);
      }
      .letter {
        line-height: 140%;
      }
      .cell-num {
        position: absolute;
        top: 0;
        left: 1px;
        font-size: 0.4em;
        line-height: 1em;
      }
      .cell-flag {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        opacity: 0;
        z-index: 1000;
      }
      .circle {
        height: 100%;
        width: 100%;
        position: absolute;
        border: 1px solid black;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        border-radius: 50%;
        top: 0;
      }
    }
  }
}

.clue-column {
  float: left;
  background: lightgrey;
  border: 1px solid lightgrey;
  margin-left: 0.4em;
  margin-right: 0;
  h6 {
    text-align: center;
  }
  .clues {
    list-style-type: none;
    max-height: 367px;
    overflow: scroll;
    width: 250px;
    overflow-x: hidden;
    background: white;
    font-size: smaller;
    padding: 0.1em 0.25em;

    .clue {
      border: 1px solid rgba(255,255,255,0);
      padding: 0 0.25em 0 2em;
      text-indent: -1.7em;
      cursor: pointer;

      &.crossed-off {
        text-decoration: line-through;
        opacity: 0.5;
      }

      &.selected-clue {
        background-color: rgba(255, 255, 170, 1);
        border: 1px solid #999;
      }
    }
    input {
      height: 1.5em;
      display: inline-block;
      border: none;
      -moz-box-shadow: none;
      -ms-box-shadow: none;
      -webkit-box-shadow: none;
      box-shadow: none;
      background: none;
      margin-bottom: 0;
      cursor: pointer;
      &:focus {
        cursor: text;
      }
    }
  }
}


#solve-controls {
  position: relative;
  overflow: auto;
  margin-left: 0.6em;
  margin: 0.2em;
  float: left;
  width: 32em;
  padding: 0;
  text-align: center;
  button {
    display: inline-block;
    height: inherit;
    width: 49%;
    margin: 0;
    outline: none;
    // Color scheme used for the new buttons
    // http://colorschemedesigner.com/#3o61Tq5JJw0w0
    &.warning {
      @include button-style(#FFC68D);
    }
    &.success {
      @include button-style(#83EDA3);
    }
  }
}

#preview {
  text-align: center;
  canvas {
    display: inline-block;
  }
}
#teammates {
  display: inline-block;
  .teammate-box {
    width: 1em;
    height: 1em;
    -moz-box-shadow: 1px 1px 2px #444;
    -ms-box-shadow: 1px 1px 2px #444;
    -webkit-box-shadow: 1px 2px 1px #444;
    box-shadow: 1px 1px 2px #444;
    display: inline-block;
    margin-right: 0.2em;
  }
}

#team-chat {
  width: 300px;
  height: 400px;
  position: fixed;
  bottom: 0;
  background: white;
  right: 2em;
  border: 1px solid black;
  border-bottom: none;
  -webkit-border-top-left-radius: 0.5em;
  -webkit-border-top-right-radius: 0.5em;
  -moz-border-radius-topleft: 0.5em;
  -moz-border-radius-topright: 0.5em;
  border-top-left-radius: 0.5em;
  border-top-right-radius: 0.5em;
  transition: bottom 0.2s;
  z-index: 1;

  &.down {
    bottom: -380px;
  }

  .row-topper {
    height: 1.5em;
    background: black;
    -webkit-border-top-left-radius: 0.5em;
    -webkit-border-top-right-radius: 0.5em;
    -moz-border-radius-topleft: 0.5em;
    -moz-border-radius-topright: 0.5em;
    border-top-left-radius: 0.5em;
    border-top-right-radius: 0.5em;
    color: white;
    text-align: center;
    font-weight: bold;
    padding-top: 0.2em;
    cursor: pointer;

    #chat-minmax {
      position: absolute;
      right: 1em;
    }
  }
  input {
    position: absolute;
    bottom: 0.5em;
    margin: 0;
    width: 96%;
    left: 2%;
    right: 2%;
  }
  #chats {
    overflow: scroll;
    height: 330px;
    padding: 0.1em;

    hr {
      margin: 0.2em 0;
    }
  }
  .chat {
    width: 100%;
    font-size: 0.8em;
    min-height: 27px;
    -webkit-transition: all 0.5s linear;
    -moz-transition: all 0.5s linear;
    -o-transition: all 0.5s linear;
    transition: all 0.5s linear;
    &.my-chat {
      text-align: right;
    }
    &:not(.my-chat) {
      .avatar, .display-name, .chat-text {
      }
    }
    .avatar {
      width: 27px;
      height: 27px;
    }
    .display-name {
      font-weight: bold;
    }
    .chat-text {
      max-width: 100%;
      word-wrap: break-word;
    }
  }
}
#comments {
  textarea {
    resize: none;
    overflow: auto;
  }
  .comment {
    li {
      width: 70%;
    }
    textarea {
      height: 1em;
      min-height: 2.3em;
    }
  }
}
.team-outline {
  position: absolute;
  z-index: 999;
}

#controls-modal {
  width: 40%;
  margin-left: -20%;
  min-width: 25em;
  h1 {
    text-align: center;
  }
  li {
    font-size: 0.875em;
  }
  
  #keys {
    li {
      text-align: right;
    }
  }
}