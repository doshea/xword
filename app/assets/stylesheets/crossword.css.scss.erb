@import 'dimensions';

#body > .row {
  padding: 0.5em 1em 0 1em;
  max-width: $row-width+2em;
}

#credit_area, #solve_area, #meta_area {
  background-image: url("<%= asset_path 'paper.jpeg' %>");
}

#credit_area {
  margin-top: 2.5em;
  margin-bottom: 0;
  -webkit-border-top-left-radius: 0.3em;
  -webkit-border-top-right-radius: 0.3em;
  -moz-border-radius-topleft: 0.3em;
  -moz-border-radius-topright: 0.3em;
  border-top-left-radius: 0.3em;
  border-top-right-radius: 0.3em;
  h3 {
    margin-bottom: 0.2em;
    #creator_credit {
      font-size: large;
      font-weight: normal;
    }
  }
  #puzzle_controls {
    position: absolute;
    right: 0.5em;
    top: 0.5em;
  }
}
#meta_area {
  -webkit-border-bottom-left-radius: 0.3em;
  -webkit-border-bottom-right-radius: 0.3em;
  -moz-border-radius-bottomleft: 0.3em;
  -moz-border-radius-bottomright: 0.3em;
  border-bottom-left-radius: 0.3em;
  border-bottom-right-radius: 0.3em;
}

table#crossword {
  border-spacing: 0;
  float: left;
  tr {

    td.cell {
      padding: 0;
      margin: 0;
      border: solid 0.0625em black;
      font-size: 1.25em;
      text-align: center;
      text-transform: uppercase;
      width: 1.5em;
      height: 1.5em;
      position: relative;

      &.void {
        background-color: black !important;
      }
      &:not(.void){
        cursor: text;
      }
      &.selected {
        background-color: rgba(255,220,110,0.7);
      }
      &.selected_word:not(.selected) {
        background-color: rgba(255,255,170,0.7);
      }
      .letter {
        line-height: 140%;
      }
      .cell_num {
        position: absolute;
        top: 0;
        left: 1px;
        font-size: 0.4em;
        line-height: 1em;
      }
      .cell_flag {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        opacity: 0;
      }
    }
  }
}

.clue_column {
  float: left;
  background: lightgrey;
  border: 1px solid lightgrey;
  margin-left: 0.4em;
  margin-right: 0;
  h6 {
    text-align: center;
  }
  .clues {
    list-style-type: none;
    max-height: 350px;
    overflow: scroll;
    width: 250px;
    overflow-x: hidden;
    background: white;
    font-size: smaller;
    padding: 0.1em 0.25em;

    .clue {
      border: 1px solid rgba(255,255,255,0);
      padding: 0 0.25em 0 2em;
      text-indent: -1.7em;
      cursor: pointer;

      &.selected_clue {
        background-color: rgba(255, 255, 170, 1);
        border: 1px solid #999;
      }
    }
    input {
      display: inline-block;
      border: none;
      -moz-box-shadow: none;
      -ms-box-shadow: none;
      -webkit-box-shadow: none;
      box-shadow: none;
      background: none;
    }
  }
}

#solve_controls {
  position: relative;
  overflow: auto;
  margin-left: 0.6em;
  margin: 0.2em;
  float: left;
  width: 32em;
  padding: 0;
  text-align: center;
  button {
    display: inline-block;
    height: inherit;
    width: 32%;
    margin: 0;
    &.alert {
      background-color: rgb(230, 184, 184);
      border-color: rgb(194, 136, 136);
      color: #333;
    }
    &.warning {
      background-color: rgb(230, 230, 184);
      border-color: rgb(194, 194, 136);
      color: #333;
    }
    &.success {
      background-color: rgb(184, 230, 184);
      border-color: rgb(136, 194, 136);
      color: #333;
    }
  }
}

#preview {
  text-align: center;
  canvas {
    display: inline-block;
  }
}